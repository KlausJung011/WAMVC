@model IEnumerable<WebAppMVC.Models.ClienteModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white bg-dark d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-boxes me-2"></i>Gestión de Clientes
                    </h2>
                    <a asp-action="Create" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-plus me-1"></i>Nuevo Cliente
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0 modern-table">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="px-4 py-3">
                                            <i class="fas fa-tag me-2"></i>
                                            @Html.DisplayNameFor(model => model.First().Nombre)
                                        </th>
                                        <th class="px-4 py-3">
                                            <i class="fas fa-align-left me-2"></i>
                                            @Html.DisplayNameFor(model => model.First().Email)
                                        </th>
                                        <th class="px-4 py-3">
                                            <i class="fas fa-dollar-sign me-2"></i>
                                            @Html.DisplayNameFor(model => model.First().Direccion)
                                        </th>
                                        <th class="px-4 py-3 text-center">
                                            <i class="fas fa-cogs me-2"></i>Acciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="badge bg-light text-dark fs-6 px-3 py-2">
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </span>
                                            </td>
                                            <td class="px-4 py-3">
                                                @Html.DisplayFor(modelItem => item.Direccion)
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay clientes registrados</h4>
                            <p class="text-muted">Comienza ingresando al primer cliente</p>
                            <a asp-action="Create" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-1"></i>Crear Primer Cliente
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
