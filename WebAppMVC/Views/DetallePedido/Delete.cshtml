@model WebAppMVC.Models.DetallePedidoModel

@{
    ViewData["Title"] = "Eliminar Detalle de Pedido";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 delete-card">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle fa-2x me-3 text-warning"></i>
                            <div>
                                <h5 class="alert-heading mb-1">¿Está seguro que desea eliminar este detalle de pedido?</h5>
                                <p class="mb-0">Esta acción no se puede deshacer. El detalle será eliminado permanentemente.</p>
                            </div>
                        </div>
                    </div>
                    <div class="details-container delete-preview">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-eye me-2"></i>Vista previa del detalle a eliminar:
                        </h5>
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-sort-numeric-up me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </label>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Cantidad)
                            </div>
                        </div>
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-dollar-sign me-2 text-success"></i>
                                @Html.DisplayNameFor(model => model.PrecioUnitario)
                            </label>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.PrecioUnitario)
                            </div>
                        </div>
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-file-invoice me-2 text-info"></i>
                                @Html.DisplayNameFor(model => model.Pedido)
                            </label>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Pedido.Estado)
                            </div>
                        </div>
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-box me-2 text-warning"></i>
                                @Html.DisplayNameFor(model => model.Producto)
                            </label>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Producto.Descripcion)
                            </div>
                        </div>
                    </div>
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg delete-confirm-btn">
                                <i class="fas fa-trash me-1"></i>Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>