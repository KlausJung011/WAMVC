@model WebAppMVC.Models.DetallePedidoModel

@{
    ViewData["Title"] = "Crear Detalle de Pedido";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Crear Detalle de Pedido
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdPedido" class="form-label fw-bold"></label>
                                    <select asp-for="IdPedido" class="form-control form-control-lg" asp-items="ViewBag.IdPedido"></select>
                                    <span asp-validation-for="IdPedido" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdProducto" class="form-label fw-bold"></label>
                                    <select asp-for="IdProducto" class="form-control form-control-lg" asp-items="ViewBag.IdProducto"></select>
                                    <span asp-validation-for="IdProducto" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Cantidad" class="form-label fw-bold"></label>
                                    <input asp-for="Cantidad" class="form-control form-control-lg" />
                                    <span asp-validation-for="Cantidad" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PrecioUnitario" class="form-label fw-bold"></label>
                                    <input asp-for="PrecioUnitario" class="form-control form-control-lg" />
                                    <span asp-validation-for="PrecioUnitario" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="fas fa-save me-1"></i>Crear Detalle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}