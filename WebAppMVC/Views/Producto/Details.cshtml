@model WebAppMVC.Models.ProductoModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-box-open me-2"></i>Detalles del Producto
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="details-container">
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-tag me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </label>
                            <div class="detail-value">
                                <strong>@Html.DisplayFor(model => model.Nombre)</strong>
                            </div>
                        </div>
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-align-left me-2 text-info"></i>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </label>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Descripcion)
                            </div>
                        </div>
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-dollar-sign me-2 text-success"></i>
                                @Html.DisplayNameFor(model => model.Precio)
                            </label>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Precio)
                            </div>
                        </div>
                        <div class="detail-item mb-4">
                            <label class="detail-label">
                                <i class="fas fa-warehouse me-2 text-warning"></i>
                                @Html.DisplayNameFor(model => model.Stock)
                            </label>
                            <div class="detail-value">
                                @Html.DisplayFor(model => model.Stock)
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-md-2">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list me-1"></i>Volver a la lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>