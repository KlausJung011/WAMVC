@model WebAppMVC.Models.PedidoModel

@{
    ViewData["Title"] = "Crear Pedido";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Crear Nuevo Pedido
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="FechaPedido" class="form-label fw-bold"></label>
                                    <input asp-for="FechaPedido" class="form-control form-control-lg" />
                                    <span asp-validation-for="FechaPedido" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdCliente" class="form-label fw-bold"></label>
                                    <select asp-for="IdCliente" class="form-control form-control-lg" asp-items="ViewBag.IdCliente"></select>
                                    <span asp-validation-for="IdCliente" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Estado" class="form-label fw-bold"></label>
                                    <input asp-for="Estado" class="form-control form-control-lg" value="Pendiente" readonly />
                                    <span asp-validation-for="Estado" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MontoTotal" class="form-label fw-bold"></label>
                                    <input asp-for="MontoTotal" class="form-control form-control-lg" />
                                    <span asp-validation-for="MontoTotal" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-info btn-lg text-white">
                                <i class="fas fa-save me-1"></i>Crear Pedido
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}